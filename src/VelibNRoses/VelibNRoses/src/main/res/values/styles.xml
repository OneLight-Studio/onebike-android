<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.OneBike" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.OneBike.ActionBar</item>
        <item name="android:autoCompleteTextViewStyle">@style/Theme.OneBike.SearchView.AutoCompleteTextView</item>
        <item name="android:editTextStyle">@style/Theme.OneBike.SearchView.EditText</item>
        <item name="android:buttonStyle">@style/Theme.OneBike.SearchView.Button</item>
        <item name="android:actionButtonStyle">@style/Theme.OneBike.ActionButton</item>
    </style>

    <style name="Theme.OneBike.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="android:titleTextStyle">@style/Widget.OneBike.ActionBar.TitleTextStyle</item>
        <item name="android:actionBarItemBackground">@color/green_pressed_focused</item>
    </style>

    <style name="Theme.OneBike.ActionButton" parent="android:Widget.Holo.ActionButton">
        <item name="android:background">@drawable/search_button</item>
    </style>

    <style name="Widget.OneBike.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Theme.OneBike.SearchView" parent="@style/Theme.OneBike">
        <item name="android:background">@android:color/black</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.OneBike.SearchView.AutoCompleteTextView" parent="android:Widget.Holo.AutoCompleteTextView">
        <item name="android:background">@android:color/white</item>
        <item name="android:height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="Theme.OneBike.SearchView.EditText" parent="android:Widget.Holo.EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.OneBike.SearchView.Button" parent="android:Widget.Holo.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:height">48dp</item>
    </style>

</resources>