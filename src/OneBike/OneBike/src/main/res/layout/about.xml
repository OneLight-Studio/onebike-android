<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/about_onebike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onebike"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/about_title"
            android:layout_below="@+id/about_onebike"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/about_subtitle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/about_subtitle"
            android:layout_below="@+id/about_title"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/about_text_1"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/about_text_1"
            android:layout_below="@+id/about_subtitle"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/about_text_2"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/about_text_2"
            android:layout_below="@+id/about_text_1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/about_onelight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/onelight"
            android:background="@drawable/rounded_image_background"
            android:layout_below="@id/about_text_2"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/about_copyright"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/about_onelight"
            android:textSize="12sp"
            android:layout_below="@id/about_text_2"
            android:text="@string/about_copyright"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>
