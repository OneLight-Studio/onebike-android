            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/about_title_1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Aenean temport pharetra tristique"
            android:layout_below="@+id/about_img"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/about_text_1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:text="Nunc adipiscing urna sed libero bibendum, eget mattis ipsum porttitor. Etiam lorem urna, mollis sit amet augue quis, bibendum porta est. Nunc nisi metus, sollicitudin in neque eu, sollicitudin venenatis orci."
